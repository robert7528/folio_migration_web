# FOLIO Migration Web Application Configuration

# Application Settings
APP_NAME=FOLIO Migration Web
APP_ENV=development
DEBUG=true

# Server Settings
HOST=127.0.0.1
PORT=8000

# Database
DATABASE_URL=sqlite:///./data/migration.db

# Clients Directory (where client projects are stored)
CLIENTS_DIR=./clients

# Migration Template Repository
TEMPLATE_REPO_URL=https://github.com/FOLIO-FSE/migration_repo_template.git

# Encryption Key (auto-generated if not set)
# ENCRYPTION_KEY=

# File Upload Settings
MAX_UPLOAD_SIZE_MB=500
ALLOWED_EXTENSIONS=.mrc,.marc,.json,.csv,.tsv,.txt,.xml
